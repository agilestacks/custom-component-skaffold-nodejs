apiVersion: skaffold/v2alpha1
kind: Config
build:
  cluster:
    namespace: automation-tasks
    dockerConfig:
      path: docker.json
  artifacts:
    - image: ${component.skaffold-nodejs.image}
      context: backend
      sync:
        manual:
        # Sync all the javascript files that are in the src folder
        # with the container src folder
        - src: 'src/**/*.js'
          dest: .
deploy:
  kubectl:
    manifests:
     - templates/*.yaml
